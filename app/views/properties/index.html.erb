<div class="row">
  <div class="col-sm-3">
      <h4>Select Auction Dates</h4>
      <div id="dp-ex-3" class="input-group date" data-auto-close="true" data-date="<%= Date.today %>" data-date-format="dd-mm-yyyy" data-date-autoclose="true">
        <input class="form-control" type="text">
        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
      </div>
      <span class="help-block">dd-mm-yyyy</span>
 </div> <!-- col-sm-3 -->
</div> <!-- row -->

<div class="row">
  
    <div class="portlet">
    
                <div class="portlet-header">
    
                  <h3>
                    <i class="fa fa-table"></i>
                    Auctions for <%= @auctionDate %>
                  </h3>
    
                </div> <!-- /.portlet-header -->
    
                <div class="portlet-content">						
    
                  <div class="table-responsive">
    
                  <table id="properties" class="table table-striped table-bordered table-hover table-highlight table-checkable"
                         data-provide="datatable" 
                         data-display-rows="10" 
                         data-info="true" 
                         data-search="true" 
                         data-length-change="true" 
                         data-paginate="true"
                   >
                      <thead>
                        <tr>
                          <th class="checkbox-column"><input type="checkbox" class="icheck-input"></th>
                          <th data-filterable="true" data-sortable="true" data-direction="asc">ID</th>
                          <th data-filterable="true" data-sortable="true" data-direction="asc">Status</th>
                          <th data-filterable="true" data-sortable="true">Address</th>
                          <th data-filterable="true" data-sortable="true">City</th>
                          <th data-filterable="true" data-sortable="true">Zip</th>
                          <th data-filterable="false" data-sortable="true">Judgement</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @properties.each do |property| %>
                        <tr>
                          <td class="checkbox-column"><input type="checkbox" class="icheck-input call-checkbox" value="<%= property.id %>"></td>
                          <td><%= link_to property.id, property %></td>
                          <td><%= property.auctionStatus %></td>
                          <td><%= property.address %></td>
                          <td><%= property.city %></td>
                          <td><%= property.zip %></td>
                          <td class = "dollars"><%= number_to_currency(property.judgement) %></td>
                        </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div> <!-- /.table-responsive -->
    
                </div> <!-- /.portlet-content -->
    
              </div>
    
    <br>

  <%#= form_for :favorities, :url => favorites_path, :html => { :method => :post, :class => "myclass", :id => "fform"  } do |f| %>
    <%#= hidden_field_tag "properties_ids[]", "" , id: 'flist'%>
    <%#= f.submit 'Add Selected to Favorites' , class: 'btn btn-primary btn-md myclass' %>
  <%# end %>

  <%#= form_for :favorites , :url => favorites_path ,:method => :post do |f| %>
  <%# end %>
  <button  class = "btn btn-primary btn-md myclass" > Add Selected to Favorites </button>

  <div id="fac_s" style = "color: green"></div>
    <%= link_to 'New Property', new_property_path %>
</div> <!-- row -->


